{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "baseUrl": ".",
      "jsx": "react",
      "paths": {
          "@web/*": ["./apps/web/*"],
          "@native/*": ["./apps/native/*"],
          "@lib/*": ["./apps/lib/*"]
      },
      "sourceMap": true
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "../../node_modules/@types/**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "./apps/**/*"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }